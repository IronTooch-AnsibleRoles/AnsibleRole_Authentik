[Unit]
Description={{ my_app_name | upper }}
Requires=docker.service
After=docker.service

[Service]
Type=oneshot
User={{ my_app_service_user }}
Group={{ my_app_service_user }}
ExecStart={{ my_app_start_command }}
ExecStop={{ my_app_stop_command }}
RemainAfterExit=true

[Install]
WantedBy=multi-user.target